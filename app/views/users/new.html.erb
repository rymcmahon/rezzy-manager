<%= form_for @user do |f| %>
<%= f.fields_for :reservations do |reservation_form| %>
<div class="row reservation-row">
  <div class="col-md-2 form-group">
    <%= reservation_form.label :seating_capacity, "Number in Party"%> <br />
    <%= reservation_form.collection_select :table_id, Table.all, :id, :seating_capacity, {:prompt => "Select Guests"}, class:"form-control" %> <br />

  </div>
  <div class="col-md-2 form-group">
  <%= reservation_form.label :date %><br />
  <%= reservation_form.text_field :date, id:"datepicker", class:"form-control" %><br />
  </div>
  <div class="col-md-2 form-group">
  <%= reservation_form.label :starts_at %><br />
  <%= reservation_form.text_field :starts_at, id:"timepicker", class:"form-control" %><br />
  </div>
</div>

<!-- <%= reservation_form.label :ends_at %><br /> -->
<!-- <%= reservation_form.time_select :ends_at %><br /> -->


<% end %>
<div class="row user-row">
  <div class="col-md-3 form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, class:"form-control" %><br />
  </div>
  <div class="col-md-3 form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class:"form-control" %><br />
  </div>
</div>
<div class="row user-row">
  <div class="col-md-3 form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email, class:"form-control" %><br />

  </div>
  <div class="col-md-3 form-group">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, class:"form-control" %><br />
  </div>
</div>



  <p>
    <%= f.submit "Book Reservation", class:'btn btn-md btn-success' %>
  </p>
<% end %>

</div>
